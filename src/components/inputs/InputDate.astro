---
/**
 * * input med type="date" förväntar
 * * step är lite olikt beroende på type time och date
 * * men min och max kan fortfarande vara daton.
 * * Protip: valueAsDate istället för strängar 👌🏻
 * * Wut! name="date" blir tillgängligt som variabel, scopat till formen den finns i
 */
---

<fieldset>
  <legend>Date</legend>
  <label for="datepicker">
    <small>Date</small>
  </label>
  <div class="button-row">
    <!-- <input name="date" id="datepicker" step="7" type="date" /> -->
    <input name="date" id="datepicker" step="7" type="date" />
    <div class="button-row">
      <button type="button" onclick="date.stepDown()">- 1 d</button>
      <button type="button" onclick="date.stepUp()">+ 1 d</button>
      <!-- <button type="button" onclick="date.valueAsDate = new Date()">Idag</button> -->
      <!-- <button type="button" onclick="date.stepDown(7)">- 1 w</button> 
      <button type="button" onclick="date.stepUp(7)">+ 1 w</button> -->
    </div>
  </div>
</fieldset>

